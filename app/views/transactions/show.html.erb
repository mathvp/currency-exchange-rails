<!DOCTYPE html>
<html class="ls-theme-green">
  <head>
    <title>Registrar Transação</title>
    <%= render 'shared/head'%>
  </head>
  <body>
    <%= render 'shared/header' %>

    <aside class="ls-sidebar">
      <%= render 'shared/sidebar_menu'%>
    </aside>

    <main class="ls-main ">
      <div class="container-fluid">
        <% transaction = @transaction %>
        <h2 class="ls-title-intro ls-title-2">Detalhes da Transação <%= transaction.id %></h2>
        <h3>Identificador</h3>
        <p><%= transaction.id %></p>
        <h3>Usuário</h3>
        <p><%= transaction.user.email %></p>
        <h3>Quantidade</h3>
        <p><%= transaction.amount %></p>
        <h3>Moeda</h3>
        <p><%= transaction.to_pt_BR(transaction.currency) %></p>
        <h3>Cotação</h3>
        <p>$ <%= transaction.quotation %></p>
        <h3>Tipo</h3>
        <p><%= transaction.to_pt_BR(transaction.transaction_type) %></p>
        <h3>Data</h3>
        <p><%= transaction.created_at.strftime('%d/%m/%Y') %></p>
        <h3>Total</h3>
        <p><%= number_to_currency(transaction.total, format: '%u %n', negative_format: '%u -%n')%></p>

        <p><%= link_to 'Editar', edit_transaction_path(transaction) %></p>
        <p><%= link_to 'Apagar', transaction_path(transaction), method: :delete %></p>
     
      </div>
    </main>
  </body>
</html>

