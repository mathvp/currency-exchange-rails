<ul>
  <% @user.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  <% end %>
</ul>

<%= form_for @user do |f| %>
  <%= f.label :name, 'Nome' %>
  <%= f.text_field :name %>
  <%= f.label :email, 'E-mail' %>
  <%= f.text_field :email %>
  <%= f.label :cpf, 'CPF' %>
  <%= f.text_field :cpf %>
  <%= f.label :address, 'Endereço' %>
  <% if @user.address.present? %>
    <%= @user.address %>
  <% else %>
    <p>Este usuário não tem um endereço cadastrado</p>
  <% end %>
  <%= f.submit 'Editar' %>
<% end %>